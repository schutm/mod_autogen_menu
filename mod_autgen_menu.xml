<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0">
	<name>AutGen menu</name>
	<author>Jan Zikmund</author>
	<creationDate>2009-02-21</creationDate> 
	<copyright>(C) Jan Zikmund 2008</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@janzikmund.cz</authorEmail>
	<authorUrl>www.janzikmund.cz</authorUrl>
	<version>2.2</version>
	<description>DESCAUTGENMENU</description>
	<files>
		<filename module="mod_autgen_menu">mod_autgen_menu.php</filename>
		<filename module="mod_autgen_menu">helper.php</filename>
		<filename module="mod_autgen_menu">index.html</filename>  
		<filename module="mod_autgen_menu">tmpl/default.php</filename>   
		<filename module="mod_autgen_menu">tmpl/index.html</filename>     
	</files>
	<languages>
		<language tag="en-GB">language/en-GB.mod_autgen_menu.ini</language>
		<language tag="cs-CZ">language/cs-CZ.mod_autgen_menu.ini</language>
	</languages>	
	<params>
    <param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		<param name="generate_from" type="list" default="section" label="GENFROMLABEL" description="GENFROMDESC">
			<option value="section">GENFROMVAL2</option>
			<option value="category">GENFROMVAL1</option>
	  </param>       
    <param name="@spacer" type="spacer" default="" label="" description="" />
    
		<param name="showbysecid" type="section" default="" label="SECIDLABEL" description="SECIDDESC" />			
		<param name="showbycatid" type="category" default="" label="CATIDLABEL" description="CATIDDESC" />		
		<param name="@spacer" type="spacer" default="" label="" description="" />

    <param name="category_function" type="list" default="separators" label="CATFUNCLABEL" description="CATFUNCDESC">
			<option value="links">CATFUNCVAL1</option>
			<option value="separators">CATFUNCVAL2</option>
			<option value="hidden">CATFUNCVAL3</option>
	  </param>       
	  <param name="article_function" type="list" default="links" label="ARTFUNCLABEL" description="ARTFUNCDESC">
			<option value="links">ARTFUNCVAL1</option>
			<option value="hidden">ARTFUNCVAL2</option>
	  </param>
	  <param name="limit" type="text" default="" label="ARTLIMITLABEL" description="ARTLIMITDESC" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		
    <param name="outputmode" type="list" default="1" label="OUTLABEL" description="OUTDESC">
			<option value="1">OUTVALUE1</option>	
    </param>				
		<param name="category_order" type="list" default="title_asc" label="CATLABEL" description="CATDESC">
			<option value="category">CATVAL1</option>
			<option value="category DESC">CATVAL2</option>
			<option value="cat_order">CATVAL3</option>
			<option value="none">CATVAL4</option>	
	  </param>    
		<param name="article_order" type="list" default="title_asc" label="ARTORDER" description="ARTDESC">
			<option value="article">ARTVAL1</option>
			<option value="article DESC">ARTVAL2</option>
			<option value="art_order">ARTVAL3</option>	
			<option value="none">ARTVAL4</option>	
	  </param>   	  
	</params>			
	<params group="advanced">
		<param name="cache" type="list" default="1" label="Caching" description="Select whether to cache the content of this module">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
		</param>
		<param name="cache_time" type="text" default="900" label="Cache Time" description="The time before the module is recached" />
	</params>
</install>
